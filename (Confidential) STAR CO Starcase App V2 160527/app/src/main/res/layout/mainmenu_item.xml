<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:id="@+id/mainmenu_item_text"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:typeface="monospace"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="48dp"
        android:layout_alignTop="@+id/mainmenu_item_image"
        android:layout_toEndOf="@+id/mainmenu_item_image"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/mainmenu_item_image"
        android:src="@drawable/phone_icon"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="18dp"
        android:layout_below="@+id/view4"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="20dp"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/mainmenu_item_image"
        android:id="@+id/view4" />

</RelativeLayout>